<p id="notice"><%= notice %></p>

<h1>Listing Makeup Artists and Hair Stylists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <!--<th>Description</th>-->
      <th>Image</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <!--<td><%= pet.description %></td>-->
        <td><%= image_tag pet.image.thumb %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Remove', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

